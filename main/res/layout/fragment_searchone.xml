<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.SearchoneFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.stx.xhb.xbanner.XBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:layout_marginTop="@dimen/dp_20"
            android:clipChildren="false"
            app:AutoPlayTime="3000"
            app:clipChildrenLeftRightMargin="@dimen/dp_20"
            app:isClipChildrenMode="true"
            app:isShowIndicatorOnlyOne="false"
            app:isShowNumberIndicator="true">

        </com.stx.xhb.xbanner.XBanner>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rxxp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/bitmap_xinpinrexiao"
                    android:gravity="center"
                    android:text="热销新品"
                    android:textColor="#FF7F24"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/yellow"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/common_btn_more_yellow_n" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/xinpinXrecy"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mlss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bitmap_molishishang"
                    android:gravity="center"
                    android:text="魔力时尚"
                    android:textColor="#8968CD"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/purple"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/home_btn_more_purple_n" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/moliXrecy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_422"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pzsh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bitmap_pinzhishenghuo"
                    android:gravity="center"
                    android:text="品质生活"
                    android:textColor="#EE799F"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:id="@+id/pink"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/home_btn_moer_pink_n" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/pinzhiXrecy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/titleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/bitmap_pinzhishenghuo"
            android:gravity="center"
            android:text="品质生活"
            android:textColor="#ace"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_20"/>

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:id="@+id/xrecy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.jcodecraeer.xrecyclerview.XRecyclerView>

    </LinearLayout>

</LinearLayout>