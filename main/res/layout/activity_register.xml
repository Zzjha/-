<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@mipmap/zcdl"
    android:orientation="vertical">

    <EditText
        android:id="@+id/tel_register"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_height="wrap_content"
        android:hint="手机号"
        android:drawableLeft="@mipmap/login_icon_phone"
        android:drawablePadding="@dimen/dp_10"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_150"
        android:textColorHint="#fff"
        android:textColor="#fff"
        android:theme="@style/EdittextColor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_30">
        <EditText
            android:id="@+id/code_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@mipmap/login_icon_verificationcode"
            android:drawablePadding="@dimen/dp_10"
            android:hint="验证码"
            android:textColor="#fff"
            android:textColorHint="#fff"
            android:theme="@style/EdittextColor" />
        <TextView
            android:id="@+id/getcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/dp_10"/>
    </RelativeLayout>


    <com.xw.repo.XEditText
        android:id="@+id/pwd_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_gravity="center"
        android:drawableLeft="@mipmap/login_icon_lock"
        android:drawablePadding="@dimen/dp_10"
        android:hint="记住密码"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:theme="@style/EdittextColor"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/dp_30"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_30">
        <TextView
            android:id="@+id/register_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账户？立即登录"
            android:textColor="#fff"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="#FF6A6A"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_100"
        android:background="@drawable/yuanjiaoborder"/>

</LinearLayout>